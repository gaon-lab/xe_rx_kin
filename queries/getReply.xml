<query id="getReplies" action="select">
    <tables>
        <table name="kin_replies" />
    </tables>
    <columns>
        <column name="*" />
    </columns>
    <conditions>
        <condition operation="equal" column="reply_srl" var="reply_srl" notnull="notnull" />
    </conditions>
</query>
