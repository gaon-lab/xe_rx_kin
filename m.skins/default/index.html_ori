		<script>
			(function($){
				function adjust_position(e){
					var $ul = $('div.ln ul');
					var $active = $('div.ln li.active');
					var width = $ul.width();
					var left = $active.offset().left;
					var width2 = $active.outerWidth();
					if(left + width2  > width){
						$ul.scrollLeft(left + width2);
					}
				}
				$(window).bind('resize', adjust_position).trigger('resize');
			})(jQuery);
		</script>
